extends layout
block body
  -if(signupEmail)
    p Congratulations on siging up! please login below.
  form(action="/login",method="post")
    fieldset
      legend  Log in
      p
        label Email
        input(name="email" type="text" value=signupEmail)
      p
        label Password
        input(name="password" type="text")
      p
        button Submit
      p
        a(href="/") Go Back
extends layout
block body
  a(href="/") Go Back
  h2 Tasks for project #{project.title}
  #list
    ul#tasks-list
      each task in tasks
        li
          span= task.title
          a.delete(href="/task/#{task.id}") x

    form#add(action="/project/#{project.id}/task",method="post")
      input(name="title" type="text")
      button Add